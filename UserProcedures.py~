class ladenEval:
	def __init__(self):
		
		s = settings1
		
		t = target.coarseMatrix(s.basis_dim,s.merge_dim,s.derivate_dim, s.f)
		t.load("fein2", "test","bin")
		t.transformDim()
		t.interpolate('cubic')
		

		
		dEB_types = [0.6]
		t.eval2dGaussianDistribution(dEB_types, 0)
	
		p = plot.matrix(t)
		
		#p = plot.multiPlot(t)
		p.plot()
		
		p.heatMap()
		p.show()
		p.save("dEB", "test")


